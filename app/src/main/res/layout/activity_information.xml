<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_view_info"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <android.support.v7.widget.Toolbar android:id="@+id/information_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:titleTextColor="@color/textColorPrimary"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_for_info"
            android:src="@drawable/drawer_logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_news_info"
            android:layout_below="@+id/image_for_info"
            android:textSize="40sp"
            android:gravity="center"
            android:text="@string/about_page"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_news_info_text"
            android:layout_below="@+id/title_news_info"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:text="@string/about_page_text"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_news_info_text2"
            android:layout_below="@+id/title_news_info_text"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:text="@string/about_page_text2"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_news_info_text3"
            android:layout_below="@+id/title_news_info_text2"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:text="@string/about_page_text3"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_news_info_text4"
            android:layout_below="@+id/title_news_info_text3"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:text="@string/about_page_text4"
            android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
</ScrollView>
